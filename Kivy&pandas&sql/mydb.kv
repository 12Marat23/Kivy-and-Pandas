<MainPage>
    id: my_widget
    GridLayout:
        size: root.width, root.height
        rows:3
        padding: 20
        spacing: 10



        FileChooserIconView:
            id: filechooser
            on_selection: my_widget.selected(filechooser.selection)
        Button:
            text: 'Открыть страницу'
            on_release: my_widget.open_data_page()

<DataPage>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            id: buttons_layout
            size_hint_y: None
            height: 50
            orientation: 'horizontal'
        ScrollView:
            GridLayout:
                id: data_layout
                cols: 1
                size_hint_y: None
                height: self.minimum_height